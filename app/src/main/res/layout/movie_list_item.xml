<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/movie_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/movie_imageView"
        android:layout_toRightOf="@+id/movie_imageView"
        android:textSize="18dp"
        android:text="肖申克的救赎"/>

    <TextView
        android:id="@+id/movie_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/movie_imageView"
        android:layout_below="@+id/movie_title"
        android:text="9.6"/>

    <TextView
        android:id="@+id/movie_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/movie_imageView"
        android:layout_below="@+id/movie_average"
        android:text="犯罪,剧情"/>


    <TextView
        android:id="@+id/movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/movie_imageView"
        android:layout_below="@+id/movie_genres"
        android:text="1994"/>

</RelativeLayout>
